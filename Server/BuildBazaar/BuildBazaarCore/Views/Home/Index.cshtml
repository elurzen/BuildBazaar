<body class="index-content">
    @* <div class="overlay"></div> *@
    <div id="login-container">
        <div class="titleText">Build Bazaar</div>
        <form id="login-form" method="post">
            <div class="login-group">
                <label for="username">Username:</label>
                <input id="username" type="text" required>
            </div>
            <div class="login-group">
                <label for="password">Password:</label>
                <input id="password" type="password" required>
            </div>
            <div class="forgot-password">
                <a href="javascript:void(0);" onclick="showPasswordResetForm()">Forgot username or password?</a>
            </div>
            <div class="login-button-container buttons">
                <button id="login-button" type="submit">Log In</button>
                <button id="signup-button" type="button" onclick="showSignupForm()">Sign Up</button>
            </div>
        </form>
    </div>

    <div id="signup-form" class="popup-overlay">
        <div class="popup-content">
            <h2>Sign Up</h2>
            <form id="new-user-form" method="post">
                <div class="form-group">
                    <label for="email">Email:</label><input id="new-email" type="email" required>
                </div>
                <div class="form-group">
                    <label for="new-username">Username:</label><input id ="new-username" type="text" name="username" required>
                </div>
                <div class="form-group">
                    <label for="new-password">Password:</label><input id="new-password" type="password" name="password" placeholder="Minimum of 8 characters" required>
                </div>
                <div class="buttons">
                    <button id="signup-submit" type="submit">Sign up</button>
                    <button id="signup-cancel" type="button" onclick="hideSignupForm()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <div id="password-reset-popup" class="popup-overlay">
        <div class="popup-content">
            <h2>Password Reset</h2>
            <form id="password-reset-form" method="post">
                <label class="grid-centered">Enter your email address to receive a reset link.</label>
                <div class="form-group">
                    <label for="reset-email">Email:</label><input type="email" id="reset-email" required>
                </div>
                <div class="buttons">
                    <button id="password-reset-submit" type="submit">Send Link</button>
                    <button id="password-reset-cancel" type="button" onclick="hidePasswordResetForm()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <div id="new-password-popup" class="popup-overlay">
        <div class="popup-content">
            <h2>New Password</h2>
            <form id="new-password-form" method="post">
                <label class="grid-centered">Enter a new password for your account</label>
                <div class="form-group">
                    <label for="token-new-password">Password:</label><input id="token-new-password" type="password" placeholder="Minimum of 8 characters" required>
                </div>
                <div class="buttons">
                    <button id="new-password-submit" type="submit" >Save</button>
                    <button id="new-password-cancel" type="button" onclick="hideNewPasswordForm()">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</body>
